////////////////////////////////////////////////////////////////////////////////////////////////////

Classes, Constructors and Inheritence

class Mammal:
    def walk(self):
        print("walk")


class Dog(Mammal):
    pass


class Cat(Mammal):
    pass


dog = Dog()
dog.walk()



import random

class Dice:
    def __init__(self, dice):
        self.dice = dice

    def roll(self):
        first = random.randint(1, 6)
        second = random.randint(1, 6)
        return first, second


dice = Dice("red dice")

print(dice.roll())

////////////////////////////////////////////////////////////////////////////////////////////////////

utils
def find_max(numbers):
    maximum = numbers[0]
    for number in numbers:
        if number > maximum:
            maximum = number
    return maximum

import utils

numbers = [2, 5, 9, 23, 4, 55, 45]

maximum = utils.find_max(numbers)
print(maximum)

