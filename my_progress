
weight converter (16.12)

weight = int(input('Weight: '))
type = input('(L)bs or (K)g: ')

if type.upper() == "L":
    converted = weight * 0.45
    print(f"ur are {converted} kilos")
elif type.upper() == "K":
    converted = weight * 2.2
    print(f"ur are {converted} pounds")
else:
    print('invalid data')
    
