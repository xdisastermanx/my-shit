////////////////////////////////////////////////////////////////////////////////////////////////////

convert to emoji using function


def emoji_converter(message):
    words = message.split(' ')
    emojis = {
        ":)": "ðŸ˜ƒ",
        ":(": "ðŸ˜¢"
    }
    output = ""
    for word in words:
        output += emojis.get(word, word) + " "
    return output


message = input("Enter text > ")
result = emoji_converter(message)
print(result)

