car game 


command = ""
while command.lower() != "quit":
    command = input("> ")
    if command.lower() == "start":
        print("car started...")
    elif command.lower() == "stop":
        print("car stopped...")
    elif command.lower() == "help":
        print("""
start - start the car
stop - stop the car
quit - quit the car""")
    else:
        print("I don't understand that...")
    
